<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4E5FCA"
            android:orientation="vertical">

            <TextView
                android:id="@+id/personID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:fontFamily="serif"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="28sp"></TextView>

            <TextView
                android:id="@+id/personName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:fontFamily="serif"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="28sp"></TextView>

            <TextView
                android:id="@+id/personUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:fontFamily="serif"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="28sp"></TextView>

            <TextView
                android:id="@+id/personEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:fontFamily="serif"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="24sp"></TextView>

            <TextView
                android:id="@+id/personAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:fontFamily="serif"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="24sp"></TextView>

            <TextView
                android:id="@+id/personPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:fontFamily="serif"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="24sp"></TextView>

            <TextView
                android:id="@+id/personWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:fontFamily="serif"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="24sp"></TextView>

            <TextView
                android:id="@+id/personCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:fontFamily="serif"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="24sp"></TextView>

            <Button
                android:id="@+id/postBt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Load Posts" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarId"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

</LinearLayout>